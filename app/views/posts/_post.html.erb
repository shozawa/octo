<div class="comment" id=<%= "post-id-#{post.id}" %>>
  <p>
    <%= image_tag post.user.avatar.url, width: 30 %>
    <%= post.user.name %>
    <%= post.content %>
  </p>
  <%= link_to '[edit]', edit_post_path(post), class: "edit", remote: true %>
  <%= link_to '[x]', post_path(post), method: :delete, remote: true %>
</div>
