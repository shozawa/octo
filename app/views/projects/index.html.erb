<%= form_for @project do |f| %>
  <p class="control">
    <%= f.text_field :name, placeholder: "プロジェクトの名前" %>
  </p>
  <p class="control">
    <%= f.submit "プロジェクトを作成", class: ["button", "is-success"] %>
  </p>
<% end %>

<table class="table">
  <thead>
    <tr><th>Name</th></tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr><td><%= link_to project.name, project_documents_path(project) %></td></tr>
    <% end %>
  </tbody>
</table>
