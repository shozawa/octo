<div class="header">
  <div class="container">
    <%= link_to "ドキュメント一覧へ戻る", project_documents_path(@document.project),  :class => 'header-item' %>
  </div>
</div>

<div class="section">
  <div class="container">
    <h1 class="title"><%= @document.name %></h1>

    <div class="notification" id="new_version_form">
      <%= render partial: 'versions/form', locals: { document: @document } %>
    </div>


    <% @versions.each do |version| %>
      <% next unless version.persisted? %>

        <div class="section">
          <%= content_tag :h2, "VERSION #{version.version_no}", :class => 'title' %>
          <%= link_to "ダウンロード", version.attachment.url(:medium) %>
          <div class="posts" id="<%= "posts_for_version_#{version.id}" %>">
            <%= render version.posts %>
          </div>

          <div class="new_post_form">
            <%= render partial: 'posts/form', locals: { post: @post, version: version } %>
          </div>
        </div>

    <% end %>

  </div>
</div>
